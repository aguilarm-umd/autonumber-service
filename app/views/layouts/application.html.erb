<% provide :app_name, 'Autonumber Service' %>
<!DOCTYPE html>
<html>
<head>
  <title>Autonumber</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body role="document">

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to yield(:app_name), root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if current_page?(auto_numbers_path) %>"><%= link_to 'Auto Numbers', auto_numbers_path %></li>
          <li class="<%= 'active' if current_page?(names_path) %>"><%= link_to 'Names', names_path %></li>
          <li class="<%= 'active' if current_page?(repositories_path) %>"><%= link_to 'Repositories', repositories_path %></li>
        </ul>
        <div class="navbar-right logo">
          <a href="http://www.lib.umd.edu/"><%= image_tag 'liblogo', alt: 'UMD Libraries' %></a>
        </div>
      </div>
    </div>
  </nav>

  <div class="container">
    <% if notice %>
      <div class="alert alert-success" role="alert"><%= notice %></div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
