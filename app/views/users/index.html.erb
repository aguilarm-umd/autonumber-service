<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New', new_user_path, class: 'btn btn-success' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>CAS Directory ID</th>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.cas_directory_id, user %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info' %>
          <!-- <%= link_to 'Delete', user, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %> -->
          <button class="btn btn-danger"
            hx-delete="/users/<%= user.id  %>"
            hx-vals='{"authenticity_token": "<%= session[:_csrf_token] %>"}'
            hx-target='body'
          >
          Delete
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>CSRF Token</h1>
<p><%= session[:_csrf_token] %></p>
